@page
@using CoffeeCrazy.Pages.JobsTemplates
@model CreateModel
@{
    ViewData["Title"] = "Opret opgave";
}

<h1>Opret Opgave</h1>

<form method="post">
    <div class="form-group">
        <label for="Titel">Titel</label>
        <input type="text" class="form-control" id="Title" asp-for="JobTemplate.Title" />
        <span asp-validation-for="JobTemplate.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Comment">Kommentar</label>
        <textarea class="form-control" id="Description" asp-for="JobTemplate.Description"></textarea>
        <span asp-validation-for="JobTemplate.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Opret</button>
</form>
