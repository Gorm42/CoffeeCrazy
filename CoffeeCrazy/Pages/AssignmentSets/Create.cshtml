@page
@model CoffeeCrazy.Pages.AssignmentSets.CreateModel
@{
    ViewData["Title"] = "Opret opgavesæt";
}

<h1>Opret Opgavesæt</h1>

<form method="post">

    <div class="form-group">
           <label for="Titel">Titel</label>
        <input type="text" class="form-control" id="Titel" asp-for="AssignmentSet.Title" />
        <span asp-validation-for="AAssignmentSet.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Assignments</label>
        @foreach (var assignment in Model.Assignments)
        {
            <div>
                <input type="checkbox" name="SelectedAssignments" value="@assignment.AssignmentId" />
                @assignment.Title
            </div>
        }
    </div>
        <button type="submit" class="btn btn-primary">Create</button>
</form>