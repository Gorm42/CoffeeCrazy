@page "{id:int}"
@using CoffeeCrazy.Models
@model CoffeeCrazy.Pages.Machines.EditModel
@{
    ViewData["Title"] = "Rediger Maskine";
}

<h1>Rediger Maskine</h1>

<form method="post">
    <div class="form-group">
        <label for="MachineId">Maskine ID</label>
        <input type="text" class="form-control" id="MachineId" value="@Model.Machine.MachineId" readonly />
    </div>

    <div class="form-group">
        <label for="Placement">Placering</label>
        <input type="text" class="form-control" id="Placement" asp-for="Machine.Placement" />
    </div>

    <div class="form-group">
        <label for="Campus">Campus</label>
        <select asp-for="Machine.Campus" class="form-control">
            @foreach (var campus in Enum.GetValues(typeof(CoffeeCrazy.Models.Enums.Campus)))
            {
                <option value="@((int)campus)">@campus</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <select asp-for="Machine.Status" class="form-control">
            <option value="true" selected="@(Model.Machine.Status)">Aktiv</option>
            <option value="false" selected="@(!Model.Machine.Status)">Inaktiv</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Opdater Maskine</button>
</form>

<a class="btn btn-secondary btn-sm" asp-page="Index">Tilbage til oversigt</a>

