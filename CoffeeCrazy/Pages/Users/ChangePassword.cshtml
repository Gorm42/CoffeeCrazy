@page
@model CoffeeCrazy.Pages.Users.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<h1>Change Password</h1>

<form method="post">
    <div>
        <label for="CurrentPassword">Current Password</label>
        <input type="password" asp-for="CurrentPassword" required />
    </div>
    <div>
        <label for="NewPassword">New Password</label>
        <input type="password" asp-for="NewPassword" required />
    </div>
    <button type="submit">Change Password</button>
</form>

@if (Model.ErrorMessage != null)
{
    <div class="text-danger">@Model.ErrorMessage</div>
}
@if (Model.SuccessMessage != null)
{
    <div class="text-success">@Model.SuccessMessage</div>
}
