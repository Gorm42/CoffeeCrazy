@page
@using CoffeeCrazy.Models
@using CoffeeCrazy.Models.Enums
@model CoffeeCrazy.Pages.Users.IndexModel

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Venstre Sidebar til Filter -->
        <div class="col-2">
            <h5>Vælg Campus</h5>
            <div class="btn-group-vertical w-100" role="group">
                @foreach (var campus in Enum.GetValues(typeof(Campus)).Cast<Campus>())
                {
                    string buttonClass;

                    if (Model.CampusFilter == campus)
                    {
                        buttonClass = "btn-dark";
                    }
                    else
                    {
                        buttonClass = "btn-outline-dark";
                    }

                    <a href="@($"?CampusFilter={(int)campus}")" class="btn @buttonClass">
                        @campus
                    </a>
                }
            </div>
        </div>

        <!-- Hovedindhold -->
        <div class="col-10">
            <div class="d-flex justify-content-between align-items-center">
                <h3>Brugere for Campus: @(Model.CampusFilter.HasValue ? Model.CampusFilter.Value : Campus.Roskilde)</h3>
                <a class="btn btn-success btn-sm" asp-page="Create">Opret Bruger</a>
            </div>

            <div class="d-flex flex-wrap mt-3">
                @foreach (var user in Model.FilteredUsers)
                {
                    <div class="card me-3 mb-3" style="width: 18rem;">
                        <div class="card-header text-center">
                            <h5>@user.FirstName @user.LastName</h5>
                        </div>
                        <div class="card-body">
                            <p class="mb-1"><strong>Email:</strong> @user.Email</p>
                            <p class="mb-1"><strong>Rolle:</strong> @user.Role</p>
                            <p class="mb-1"><strong>Campus:</strong> @user.Campus</p>
                            @if (!string.IsNullOrEmpty(user.UserImageBase64))
                            {
                                <div class="text-center mb-3">
                                    <img src="data:image/jpeg;base64,@user.UserImageBase64" alt="Brugerbillede" class="img-thumbnail" style="max-width: 100px;">
                                </div>
                            }
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a class="btn btn-warning btn-sm" asp-page="Update" asp-route-id="@user.UserId">Rediger</a>
                                <a class="btn btn-danger btn-sm" asp-page="Delete" asp-route-id="@user.UserId">Slet</a>
                            </div>
                        </div>
                    </div>
                }
                @if (!Model.FilteredUsers.Any())
                {
                    <p>Ingen brugere fundet for dette campus.</p>
                }
            </div>
        </div>
    </div>
</div>
