<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoffeeCrazy</title>
    <!--Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoffeeCrazy.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#fff387">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CoffeeCrazy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (Context.Session.GetString("Email") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Index</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Index">Indux</a>
                            </li>
                        
                            <!-- Tilføj fjer links her -->
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("FirstName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Users/Details" asp-route-userId="@Context.Session.GetInt32("UserId")">
                                    @Context.Session.GetString("FirstName")'s profil
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Machines/Index">Machine Index</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Jobs/Index">Job Index</a>
                            </li>


                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Users/Create">Opret ny bruger</a>
                            </li>
                        }
                    </ul>
                </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CoffeeCrazy - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>