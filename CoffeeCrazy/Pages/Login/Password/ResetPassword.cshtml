@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Nyt Password";
}

<h1>Nyt Password</h1>

 <form method="post">
    <input type="hidden" asp-for="IsTokenValidated" />
    
    @if (!Model.IsTokenValidated)
    {
        <div>
            <label for="Token">Indtast engangskode</label>
            <input asp-for="Token" class="form-control" required />
            <span asp-validation-for="Token" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Godkend kode</button>
    }
    else
    {
            <input type="hidden" asp-for="Token" />
        <div>
            <label for="NewPassword">Nyt Password</label>
            <input asp-for="NewPassword" type="password" class="form-control" required />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div>
            <label for="ConfirmPassword">Gentag Password</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Reset Password</button>
    }
</form>

